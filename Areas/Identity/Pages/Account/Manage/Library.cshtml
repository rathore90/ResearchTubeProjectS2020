@page
@model ResearchTube.Areas.Identity.Pages.Account.Manage.LibraryModel
@using Microsoft.AspNetCore.Identity
@using ResearchTube.Areas.Identity.Data

@inject SignInManager<ResearchTubeUser> SignInManager
@inject UserManager<ResearchTubeUser> UserManager
@{
    ViewData["Title"] = "Library";
    ViewData["ActivePage"] = ManageNavPages.LibraryData;
    var user = await UserManager.GetUserAsync(User);
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<hr class="featurette-divider">
<div class="form-group">
    <label asp-for="Input.Videoid"></label>
    <input asp-for="Input.Videoid" class="form-control" id="inputid" disabled />
    <span asp-validation-for="Input.Videoid" class="text-danger"></span>
</div>
<div class="columns" id="videolist">
    @if (user.VideoId != null)
    {
        @for (int i = 1; i <= user.VideoId.Length / 6; i++)
        {
            <div class="col-md-12" id="video1">
                <form id="library-form">
                    <div class="row">
                        <div class="col-md-5">
                            <image class="rounded-2" style="width:300px; height:250px" src="/image/mountain.jfif" asp-append-version="true"></image>
                        </div>
                        <div class="col-md-1">
                            <image class="rounded-circle" style="width:50px; height:50px" src="/image/mountain.jfif" asp-append-version="true"></image>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control">Title</label>
                                <br />
                                <label class="form-control">Name</label>
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-control">number of view</label>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-control">date created</label>
                                    </div>
                                </div>
                                <br />
                                <!--<button id="delete_video" class="form-control" onclick="deleteVideo" style="background:red">Delete</button>-->
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <br />
        }

    }


</div>
