<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ResearchTube Plan Page</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/plans.css" />
    <style>
        * {
            box-sizing: border-box;
        }

        .columns {
            float: left;
            width: 25%;
            padding: 20px;
        }

        .price {
            list-style-type: none;
            border: 1px solid #eee;
            margin: 0;
            padding: 0;
            -webkit-transition: 0.3s;
            transition: 0.3s;
        }

        .button:hover {
            box-shadow: 0 8px 12px 0 rgba(0,0,0,0.2)
        }

        .price .header {
            background-color: #111;
            color: white;
            font-size: 25px;
        }

        .price li {
            border-bottom: 1px solid #eee;
            padding: 20px;
            text-align: center;
        }

        .price .grey {
            background-color: #eee;
            font-size: 20px;
        }

        .button {
            background-color: #5588FF;
            border: none;
            color: white;
            padding: 10px 25px;
            text-align: center;
            text-decoration: none;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="centeredText">
        <div class="columns">
            <ul class="price">
                <li class="header">Free</li>
                <li class="grey">$ 0.00 / month</li>
                <li><span style="color: green">✓</span> Feature 1</li>
                <li><span style="color: red">X</span> Feature 2</li>
                <li><span style="color: red">X</span> Feature 3</li>
                
                @if (SignInManager.IsSignedIn(User)){
                <li class="grey"><a asp-area="Identity" asp-page="/Account/Register" class="button">Sign Up asdfasdfasdf</a></li> //If already signed in, take them to payment page instead. In future will do validation to see if they've already have a premium account with us
                }else{
                <li class="grey"><a asp-area="Identity" asp-page="/Account/Register" class="button">Sign Up</a></li>
                }


            </ul>
        </div>
        <div class="columns">
            <ul class="price">
                <li class="header" style="background-color:#0275d8">Basic</li>
                <li class="grey">$ 9.99 / month</li>
                <li><span style="color: green">✓</span> Feature 1</li>
                <li><span style="color: green">✓</span> Feature 2</li>
                <li><span style="color: red">X</span> Feature 3</li>
                
                @if (SignInManager.IsSignedIn(User)){
                <li class="grey"><a asp-area="Identity" asp-page="/Account/Register" class="button">Sign Up asdfasdfasdf</a></li>
                }else{
                <li class="grey"><a asp-area="Identity" asp-page="/Account/Register" class="button">Sign Up</a></li>
                }
            </ul>
        </div>

        <div class="columns">
            <ul class="price">
                <li class="header">Pro</li>
                <li class="grey">$ 19.99 / month</li>
                <li><span style="color: green">✓</span> Feature 1</li>
                <li><span style="color: green">✓</span> Feature 2</li>
                <li><span style="color: green">✓</span> Feature 3</li>
                
                @if (SignInManager.IsSignedIn(User)){
                <li class="grey"><a asp-area="Identity" asp-page="/Account/Register" class="button">Sign Up asdfasdfasdf</a></li>
                }else{
                <li class="grey"><a asp-area="Identity" asp-page="/Account/Register" class="button">Sign Up</a></li>
                }
            </ul>
        </div>
    </div>
</body>
</html>

